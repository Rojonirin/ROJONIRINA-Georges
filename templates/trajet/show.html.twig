{% extends 'base.html.twig' %}

{% block title %}Trajet{% endblock %}

{% block body %}

<section>
    <h1>Trajet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trajet.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ trajet.date ? trajet.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Placedisponible</th>
                <td>{{ trajet.placedisponible }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ trajet.prix }}</td>
            </tr>
            <tr>
                <th>AdresseDepart</th>
                <td>{{ trajet.adresseDepart }}</td>
            </tr>
            <tr>
                <th>DateArrivee</th>
                <td>{{ trajet.dateArrivee }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ trajet.heure ? trajet.heure|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_trajet_index') }}">back to list</a>

    <a href="{{ path('app_trajet_edit', {'id': trajet.id}) }}">edit</a>
