                            <td>{{ trajet.heure ? trajet.heure|date('H:i:s') : '' }}</td>
                            <td>{{ trajet.adresseDepart }}</td>
                            <td>{{ trajet.dateArrivee }}</td>
                            <td>{{ trajet.placedisponible }}</td>
                            <td>{{ trajet.prix }}</td>

                            <td>
                               <a href="{{ path('app_trajet_delete', {'id': trajet.id}) }}" onsubmit="return confirm('Vous voulez vraiment supprimer ce item?');" class="btn btn-danger">supprimer</a>
                                <a href="{{ path('app_trajet_edit', {'id': trajet.id}) }}" class="btn btn-warning">
                                </i>modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
